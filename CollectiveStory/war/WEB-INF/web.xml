<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>CollectiveStory.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>LoginService</servlet-name>
		<servlet-class>de.macbarfuss.collectivestory.server.LoginServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginService</servlet-name>
		<url-pattern>/collectivestory/LoginService</url-pattern>
	</servlet-mapping>

</web-app>
