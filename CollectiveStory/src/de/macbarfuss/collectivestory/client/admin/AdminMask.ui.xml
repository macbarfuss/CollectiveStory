<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:FlowPanel>
		<g:HTML><h1>Administration</h1></g:HTML>
		<g:Label>Users</g:Label>
		<g:VerticalPanel>
			<g:HorizontalPanel>
				<g:ListBox ui:field="users" visibleItemCount="30" width="300px" />
				<g:VerticalPanel>
					<g:CheckBox ui:field="isAdmin">Grant administration Rights</g:CheckBox>
				</g:VerticalPanel>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:TextBox ui:field="newUserName" />
				<g:PasswordTextBox ui:field="newUserPassword" />
				<g:Button ui:field="newUserButton">New ...</g:Button>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:FlowPanel>
</ui:UiBinder>